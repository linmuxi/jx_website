        <nav class="product-nav">
            <ul>
                <li><a href="/Product?nav=30">产品中心</a></li>
            </ul>
        </nav>
    </div>
    <div class="product-detail-wrap">
        @{int i = 1;}
        
        @foreach (var product in ViewBag.ProductList)
        {
            <div class="float-left product-detail-box" data-product-id="@product.id">
                <div class="product-detail-btn-wrap" ><span>了解详情</span></div>
            @if(i%2 == 0){
                <div class="product-detail-img">
                    <img src="@product.homePicUrl" alt="@product.name" title="@product.name" width="100%" height="100%" />
                </div>
                <div class="product-detail-descript">
                    <p>@product.name</p>
                    <p>贷款额度：@product.maxlimit</p>
                    <p>贷款期数：@product.periods</p>
                    <p>客户群体：@product.fitGroup</p>
                </div>
            }
            else
            {
                <div class="product-detail-descript">
                    <p>@product.name</p>
                    <p>贷款额度：@product.maxlimit</p>
                    <p>贷款期数：@product.periods</p>
                    <p>客户群体：@product.fitGroup</p>
                </div>
                <div class="product-detail-img">
                    <img src="@product.homePicUrl" alt="@product.name" title="@product.name" width="100%" height="100%" />
                </div>
            }
            </div>
            i++;
        }
    </div>
</section>
