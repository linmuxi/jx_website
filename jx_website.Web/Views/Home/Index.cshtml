<script type="text/javascript">

    ; $(function () {

        var home = function (opts) {
            this.options = $.extend(true, home.DEFAULTS, opts);
            this.bannerSwapIdx = 0;
            this.init.call(this);
        }

        home.DEFAULTS = {

        }

        home.prototype = {
            constructor: home,
            init: function () {
                this._isBrowser();
                this._initBanner();
                this._initEvent();
                this._initTimeout();
                this.makeOnlineForm();
                this.loadBorrowInfo();
            },
            _isBrowser: function () {
                var userAgent = navigator.userAgent; //取得浏览器的userAgent字符串
            },
            _initEvent: function () {

                // 产品明细鼠标移入移出事件
                this._initProductDetailEvent();

                $(".product-detail-box").click(function () {
                    location.href ="/Product/Detail?nav=30&id="+$(this).data("product-id");
                });
            },
            _initProductDetailEvent: function () {
                $(".product-detail-box").hover(function () {
                    $(this).find(".product-detail-btn-wrap").show();
                }).mouseleave(function () {
                    $(this).find(".product-detail-btn-wrap").hide();
                });
            },
            // 初始化首页banner
            _initBanner: function () {

                var _this = this;

                var slidey  = $('#banner').unslider({
                    speed: 500,
                    delay: 3000,
                    complete: function () {
                        //_this._changeBannerBtn(slidey.data('unslider').current + 1);
                        _this._changeBannerBtn(arguments[1] + 1);
                    },
                    keys: true,
                    dots: true,
                    fluid: true
                });


                //banner按钮切换
                $(".swap-btn").find("img").click(function (a, b, c) {
                    var i = parseInt($(this).data("sort"));
                    _this._changeBannerBtn(i);

                    slidey.data('unslider').move( i-1 );
                    
                });

            },
            _changeBannerBtn: function(){

                $(".swap-btn").find("img").removeClass('current');

                $(".swap-btn").find("img[data-sort='" + arguments[0] + "']").addClass('current');

            },
            _initTimeout: function () {
                // 初始化首页banner滚动定时器
                this.setIntervalBack(this._initBanner, null, 3000, this);

                // 每隔10分钟刷新一次借款信息
                this.setIntervalBack(this.loadBorrowInfo, null, 30000, this);
            },
            setIntervalBack: function (callback, args, time, _this) {
                return setInterval(function () {
                    callback.call(_this || window, args);
                }, time);
            },
            setTimeoutBack: function (callback, args, time, _this) {
                return setTimeout(function () {
                    callback.call(_this || window, args);
                }, time);
            },
            makeOnlineForm: function () {
                // 首页的在线预约和顶部的预约服务以及产品申请表单都是同一个，页面只能存在一个form表单，这里做下表单动态添加

                // 将弹出窗体的客户申请表单暂借用过来，并将其暂删除掉。
                var caf = $("#clientApplyForm");
                caf.remove();

                // 基于暂借过来的表单对象构建新的表单元素,用于显示在首页
                var $newCaf = $(caf[0].outerHTML);
                // 设置可见
                $newCaf.css("display", "block");

                //将新的表单元素显示到首页上
                $(".online-apply-form-wrap").html('<div class="online_apply_title">在线预约</div>'
                    + $newCaf[0].outerHTML);
            },
            loadBorrowInfo: function () {
                // 加载借款信息

                $.ajax({
                    url: "/Home/BorrowInfo",
                    data: "",
                    type: "post",
                    success: function (msg) {
                        if (msg && msg.Success) {
                            var obj = JSON.parse(msg.Msg);
                            if (obj.todayBorrowerDetail && obj.todayBorrowerDetail.length>0) {
                                $(".info-msg").html(obj.todayBorrowerDetail[0].text);
                            }
                        }
                    }
                });
            },
            toOnlineApply: function () { // 到在线预约
                $("body").animate({
                    scrollTop: $("#online_apply_wrap").offset().top
                }, 500);
            }
        }

        var home = new home();

        Window.JxWebSite.Home = home;

    });
</script>