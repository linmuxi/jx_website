<script>
    $(".app-step").hover(function () {
        $(this).find("hr").addClass("app-step-hr-hover");
    });

    $(".app-step").mouseover(function () {
        $(this).find("hr").addClass("app-step-hr-hover");
    }).mouseout(function () {
        $(this).find("hr").removeClass("app-step-hr-hover");
    });
</script>